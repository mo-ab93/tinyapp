<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <% if(username){ %>
      <form class="form-inline d-flex justify-content-center" action="/logout" method="POST">
        <div class="form-group mb-2">
          <label class="mx-4 text-primary">
            <%= username %>
          </label>
          <button type="submit" class="btn btn-outline-light">Log out</button>
        </div>
      </form>

      <% } else{ %>
        <form class="form-inline d-flex justify-content-center" action="/login" method="POST">
          <div class="form-group mb-2">
            <input class="form-control" type="text" name="username" placeholder="login"
              style="width: 300px; margin: 1em" />
            <button type="submit" class="btn btn-outline-info">Log in</button>
          </div>
        </form>
        <% } %>

  </nav>
</header>